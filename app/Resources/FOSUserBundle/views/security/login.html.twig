{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="container">
        <div class="row form-signin">
            {% if error %}
                <div class="security-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post" class="security-form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" class="form-control user-input" placeholder="Email or username" name="_username" value="{{ last_username }}" required="required" />

                <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" class="form-control user-input" placeholder="Password" name="_password" required="required" />

                <div class="">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        Stay logged in
                    </label>
                </div>

                <input type="submit" id="_submit" class="btn btn-lg btn-default btn-block" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </form>

            <p class="security-nav">
                <a href="{{ path('fos_user_registration_register') }}" class="click-register">Register</a>
                <a href="{{ path('fos_user_resetting_request') }}">Lost your password?</a>
            </p>
        </div>
   </div>
{% endblock fos_user_content %}
