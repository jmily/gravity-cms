{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row form-signin">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div>
                {% if invalid_username is defined %}
                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                {% endif %}
                <input type="text" id="username" class="form-control user-input"  placeholder="Username or email address" name="username" required="required" />
            </div>
            <div>
                <input type="submit" class="btn btn-lg btn-default btn-block" value="{{ 'resetting.request.submit'|trans }}" />
            </div>
        </form>
        <p class="security-nav">
            <a href="{{ path('fos_user_security_login') }}">Login</a>
            <a href="{{ path('fos_user_registration_register') }}" class="click-register">Register</a>
        </p>
    </div>
</div>

{% endblock fos_user_content %}
