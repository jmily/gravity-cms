{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}


{% block body %}
    <div class="main-wrapper">
        <div class="primary-col">
            <div class="primary-col-inner">
                <div class="wrapper">
                    <div class="vg-logo">
                        <span>G</span>
                    </div>
                    <div class="sidebar-widget" id="nav-primary-widget">
                        <ul class="nav-primary nav nav-list">
                            <li class="
                            {%
                            if app.request.attributes.get('_route') == 'admin_settings_homepage'
                            %} active
                        {% endif %} ">
                                <a class="primary-link"  href="{{ path('admin_settings_homepage') }}"><i class="fa fa-cog fa-2x" aria-hidden="true"></i>
                                    <div class="primary-link-label">设置</div></a>
                            </li>
                        </ul>
                        <ul  class="nav-primary nav nav-list">

                            <li class="
                            {%
                            if app.request.attributes.get('_route') == 'admin_brand_list' or app.request.attributes.get('_route') == 'admin_brand_edit'
                            %} active
                        {% endif %} ">
                                <a class="primary-link"  href="{{ path('admin_brand_list') }}"><i class="fa fa-trademark fa-2x"></i>
                                    <div class="primary-link-label">品牌</div></a>
                            </li>
                        </ul>

                        <ul  class="nav-primary nav nav-list">

                            <li class="
                            {%
                            if app.request.attributes.get('_route') == 'admin_category_list' or app.request.attributes.get('_route') == 'admin_category_edit'
                            %} active
                        {% endif %}">
                                <a class="primary-link" href="{{ path('admin_category_list') }}"><i class="fa fa-sitemap fa-2x"></i>
                                    <div class="primary-link-label">分类</div></a>
                            </li>
                        </ul>

                        <ul  class="nav-primary nav nav-list">

                            <li class="  {%
                            if app.request.attributes.get('_route') == 'admin_product_list' or app.request.attributes.get('_route') == 'admin_product_edit'
                            %} active
                        {% endif %}">
                                <a class="primary-link" href="{{ path('admin_product_list') }}"><i class="fa fa-product-hunt fa-2x"></i>
                                    <div class="primary-link-label">产品</div></a>
                            </li>
                        </ul>


                    </div>
                </div>
            </div>
        </div>

    {% block rightColumn %}    {% endblock %}
    </div>
{% endblock %}



{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="{{ asset('js/pace.js') }}"></script>
    <script src="{{ asset('js/admin.js') }}"></script>
{% endblock %}