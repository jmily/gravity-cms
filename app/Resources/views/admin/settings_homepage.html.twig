{% extends 'backend_layout.html.twig' %}


{% block rightColumn %}
    <div class="right-column wrapper">
        <div class="container right-column-container">
            <h1 class="right-column title">首页设置</h1>
            <hr>


                {% for flash_message in app.session.flashbag.get('notice') %}
                  <div class="alert alert-success" role="alert">
                        <div class="flash-notice">
                            {{ flash_message }}
                        </div>
                  </div>
                {% endfor %}



            <div class="company-form col-xs-4">
                {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        {{ form_label(form.tradingName) }}
                        {{ form_widget(form.tradingName,{'attr':{'class':'form-control','placeholder':'例如:Visual Gravity'}}) }}

                    </div>
                    <div class="form-group">
                        {{ form_label(form.mainHeading) }}
                        {{ form_widget(form.mainHeading,{'attr':{'class':'form-control','placeholder':'例如:澳洲/新西兰货源'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.subHeading) }}
                        {{ form_widget(form.subHeading,{'attr':{'class':'form-control','placeholder':'例如:我们专注于提供最为纯正的健康产品'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.partnerHeading) }}
                        {{ form_widget(form.partnerHeading,{'attr':{'class':'form-control','placeholder':'例如:合作伙伴'}}) }}
                    </div>

                        {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'}}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}