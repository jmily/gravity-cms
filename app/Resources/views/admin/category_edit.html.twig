{% extends 'backend_layout.html.twig' %}
{% block rightColumn %}
    <div class="right-column wrapper">
        <div class="container right-column-container">
            <h1 class="right-column title">{{ category.name }}</h1>
            <hr>


            {% for flash_message in app.session.flashbag.get('notice') %}
                <div class="alert alert-success" role="alert">
                    <div class="flash-notice">
                        {{ flash_message }}
                    </div>
                </div>
            {% endfor %}

            <div class="container-fluid">
                <div class="breadcrumb-wrapper">
                    <ol class="breadcrumb">
                        <li><a href="{{ path('admin_category_list') }}">分类列表</a></li>
                        <li class="active">{{ category.name }}</li>
                    </ol>
                </div>
            </div>


            <div class="col-xs-4 brand-edit-form">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':'例如:奶粉'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.parent) }}
                    {{ form_widget(form.parent,{'attr':{'class':'form-control'}}) }}
                </div>

                {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'}}) }}
                {{ form_end(form) }}
            </div>


        </div>
    </div>

{% endblock %}