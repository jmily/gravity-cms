{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
{% endblock %}

{% block body %}
    <header>
        <div class="top-nav-bar">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="navbar-form navbar-right sidebar">
                            <div class="nav-search">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-search  fa-fw"></i></span>
                                    <input type="text" class="form-control search-input" placeholder="搜索物品...">
                                </div>
                            </div>
                            <div class="result-wrapper">
                                <div class="result-title">
                                    <span class="label label-primary">所有物品</span>
                                </div>
                                <hr>
                                <div class="result-text">
                                    请输入产品名称进行查询
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Fixed navbar -->
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid custom-nav">
                <div class="navbar-header">
                    <span><img src="{{ asset('images/logo.png') }}" class="logo" alt=""></span>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span><a class="navbar-brand" href="{{ path('homepage') }}">公司名</a></span>
                </div>

                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('homepage') }}">首页</a></li>
                    </ul>
                    {% for category in categories %}
                        {% if category.parent == null %}
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" >{{ category.name }}<span class="caret"></a>
                                    <div class="dropdown-menu more">
                                        <div class="row more-inner">
                                            <div class="sub-category col-xs-12">
                                                 {% for child in category.children %}
                                                        <div class="sub-category-inner col-xs-12">
                                                            <h4 class="sub-category-title">{{child.name}}</h4>
                                                            <ul class="sub-category-product">
                                                                {% for product in child.products %}
                                                                    <li>{{product.name}}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </div>
                                                {% endfor %}
                                            </div><!-- end of sub-category --->

                                            <div class="brand col-xs-12">
                                                <div class="brand-inner col-xs-12">
                                                    <div class="col-xs-2 brand-title-container">
                                                        <h4 class="brand-title">品牌</h4>
                                                    </div>
                                                    <div class="col-xs-10">
                                                        {% for brand in category.brands %}
                                                            <div class="col-xs-6 brand-label">
                                                               <span class="label label-primary">{{ brand.name }}</span>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div><!-- end of brand -->
                                        </div><!-- end of more-inner -->
                                    </div><!-- end of more -->
                                </li>
                            </ul>
                        {% endif %}
                    {% endfor %}

                    </div>
                </div><!--/.nav-collapse -->
        </nav>
    </header>


    {% block wrapper %}{% endblock %}
{% endblock %}

{% block footer %}
    <footer>
        <div class="container">
            <div class="row footer-row">
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <h2>社交平台</h2>
                    <p><i class="fa fa-facebook-official"></i> 脸书</p>
                    <p><i class="fa fa-weixin"></i> 微信</p>
                    <p><i class="fa fa-weibo"></i> 微博</p>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12">
                    <h2>相关</h2>
                    <p>关于我们</p>
                    <p>联系方式</p>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12">
                    <h2>合作伙伴</h2>
                    <p>微软</p>
                    <p>谷歌</p>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12">
                    <h2>公司</h2>
                    <p>我们的历史</p>
                    <p>规模</p>
                </div>

            </div>
        </div>
    </footer>
{% endblock %}


{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="{{ asset('js/pace.js') }}"></script>
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}