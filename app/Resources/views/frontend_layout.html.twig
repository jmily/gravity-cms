{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
{% endblock %}

{% block body %}
    <header>
        <div class="top-nav-bar">
            <div class="container">
                <div class="row">
                    <div class="col-xs-2">
                    </div>
                </div>
            </div>
        </div>

        <!-- Fixed navbar -->
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid custom-nav">
                <div class="navbar-header">
                    <span><img src="{{ asset('images/logo.png') }}" class="logo" alt=""></span>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span><a class="navbar-brand" href="{{ path('homepage') }}">公司名</a></span>
                </div>

                <div id="navbar" class="navbar-collapse collapse">
                    {% for category in categories %}
                        {% if category.parent == null %}
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ category.name }} <span class="caret"></span></a>
                                        <ul class="dropdown-menu scrollable-menu">
                                            {% for subCategory in category.children %}
                                                <li><a href="#">{{ subCategory.name }}</a></li>
                                            {% endfor %}
                                        </ul>
                                </li>
                            </ul>
                        {% endif %}
                    {% endfor %}


                    {#<ul class="nav navbar-nav">#}
                        {#<li class="active dropdown">#}
                            {#<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">产品 <span class="caret"></span></a>#}
                            {#<ul class="dropdown-menu">#}
                                {#<li><a href="#">健康品</a></li>#}
                                {#<li><a href="#">女生用品</a></li>#}
                                {#<li><a href="#">数码产品</a></li>#}
                            {#</ul>#}
                        {#</li>#}
                    {#</ul>#}
                </div><!--/.nav-collapse -->


            </div>
        </nav>
    </header>

    {% block wrapper %}{% endblock %}
{% endblock %}

{% block footer %}
    <footer>
        <div class="container">
            <div class="row footer-row">
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <h2>社交平台</h2>
                    <p><i class="fa fa-facebook-official"></i> 脸书</p>
                    <p><i class="fa fa-weixin"></i> 微信</p>
                    <p><i class="fa fa-weibo"></i> 微博</p>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12">
                    <h2>相关</h2>
                    <p>关于我们</p>
                    <p>联系方式</p>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12">
                    <h2>合作伙伴</h2>
                    <p>微软</p>
                    <p>谷歌</p>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12">
                    <h2>公司</h2>
                    <p>我们的历史</p>
                    <p>规模</p>
                </div>

            </div>
        </div>
    </footer>
{% endblock %}


{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="{{ asset('js/pace.js') }}"></script>
    <script src="{{ asset('js/list_filter.js') }}"></script>
{% endblock %}