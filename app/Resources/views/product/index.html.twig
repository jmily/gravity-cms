{% extends 'frontend_layout.html.twig' %}

{% block wrapper %}
    <div class="wrapper">
        <div class="intro">
            <div class="container intro-container">
                <h1 class="text-center">{{ settings.mainHeading }}</h1>
                <h3 class="text-center">{{ settings.subHeading }}</h3>
            </div>
        </div>


        <div class="partner"><h1 class="text-center">{{ settings.partnerHeading }}</h1></div>

        <div class="container">
                <div class="brand-wrapper">
                    {% if brands !=null %}
                        {% for brand in brands %}
                                    <div class="col-xs-12 col-sm-4 col-md-3 brand-logo text-center">
                                        <a href="{{ path('brand_detail',{'id':brand.id}) }}"> <img src="{{ asset('uploads/brands/'~ brand.path ~'' ) }}" alt=""/></a>
                                    </div>
                        {% endfor %}
                    {% endif %}
                </div>
        </div>


    </div>
{% endblock %}

